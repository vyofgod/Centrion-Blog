# Security Headers for Centrion Blog
# These headers protect against common web vulnerabilities

/*
  # Content Security Policy - Maximum security
  # XSS, SQL Injection ve Code Injection korumasÄ±
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://giscus.app https://www.googletagmanager.com https://www.google-analytics.com https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:; connect-src 'self' https://giscus.app https://www.google-analytics.com https://nnmvygwcuagrvnkjdzcw.supabase.co; frame-src https://giscus.app; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests; block-all-mixed-content;
  
  # Prevent clickjacking attacks
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection (legacy browsers)
  X-XSS-Protection: 1; mode=block
  
  # Referrer policy - protect user privacy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions policy - restrict browser features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  
  # HTTP Strict Transport Security - Force HTTPS
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # Expect-CT header for certificate transparency
  Expect-CT: max-age=86400, enforce
  
  # Cache control for static assets
  Cache-Control: public, max-age=31536000, immutable

# Specific headers for HTML pages
/*.html
  # Disable caching for HTML to ensure fresh content
  Cache-Control: no-cache, no-store, must-revalidate
  
# Additional security for API endpoints (if any)
/api/*
  Access-Control-Allow-Origin: https://centrion.blog
  Access-Control-Allow-Methods: GET, POST
  Access-Control-Allow-Headers: Content-Type
